{% extends "index.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/select/macro.njk" import govukSelect %}
{% from "govuk/components/date-input/macro.njk" import govukDateInput %}

{% block pageTitle -%}
  Edit Facility Type
{%- endblock %}

{% block content %}
  <h1 class="govuk-heading-l">Edit Facility Type</h1>

  <form action="/facility-type" method="post">
    {{ govukInput({
      label: {
        text: "Facility Type Name"
      },
      classes: "govuk-input--width-20",
      id: "name",
      name: "name",
      value: facilityType.name
    }) }}

    {{ govukSelect({
      id: "calculateInterestStrategy",
      name: "calculateInterestStrategy",
      label: {
        text: "Interest Calculation Method"
      },
      value: facilityType.calculateInterestStrategy,
      items: [
        {
          value: "NoInterest",
          text: "Interest Free"
        },
        {
          value: "PrincipalOnly",
          text: "On Principal Only"
        },
        {
          value: "Compounding",
          text: "Compounding"
        }
      ]
    }) }}

    {{ govukButton({  text: "Save facility type"}) }}
  </form>

{% endblock %}