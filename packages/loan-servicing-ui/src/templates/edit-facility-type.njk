{% extends "index.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/checkboxes/macro.njk" import govukCheckboxes %}

{% block pageTitle -%}
  Edit Facility Type
{%- endblock %}

{% block content %}
  <h1 class="govuk-heading-l">Edit Facility Type</h1>

  <form action="/facility-type" method="post">
    {{ govukInput({
      label: {
        text: "Facility Type Name"
      },
      classes: "govuk-input--width-20",
      id: "name",
      name: "name",
      value: facilityType.name
    }) }}

    {{ govukCheckboxes({
      name: "interestStrategies",
      fieldset: {
        legend: {
          text: "Supported Interest Calculation Types",
          classes: "govuk-fieldset__legend--m"
        }
      },
      hint: {
        text: "Select all that apply."
      },
      items: calculateInterestSelectOptions
    }) }}

    {{ govukCheckboxes({
      name: "repaymentsStrategies",
      fieldset: {
        legend: {
          text: "Supported Repayment Schedule Types",
          classes: "govuk-fieldset__legend--m"
        }
      },
      hint: {
        text: "Select all that apply."
      },
      items: repaymentsSelectOptions
    }) }}

    {{ govukButton({  text: "Save facility type"}) }}
  </form>

{% endblock %}