{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/input/macro.njk" import govukInput %}

{% macro setDateInput(currentDate) %}
    <form>
        {{ govukInput({
            label: {
                text: "Time travel to date"
            },
            classes: "govuk-input--width-20",
            id: "projectionDate",
            name: "projectionDate",
            type: "date",
            value: currentDate
        }) }}
        {{ govukButton({  text: "Let's do the time warp again"}) }}
    </form>
{% endmacro %}