{% extends "index.njk" %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/date-input/macro.njk" import govukDateInput %}

{% from "macros/transaction-tables.njk" import transactionTables %}

{% block pageTitle -%}
  Facility
  {{ facility.streamId }}
{%- endblock %}

{% block content %}
  <h1 class="govuk-heading-l">Facility - Add Drawing
    {{ facility.streamId }}</h1>
    <form action="/facility/{{drawing.facilityStreamId}}/drawing/{{drawing.streamId}}/add-withdrawal?version={{drawing.streamVersion}}" method="post">
    {{ govukInput({
        label: {
          text: "Amount Drawn"
        },
        classes: "govuk-input--width-20",
        id: "amount",
        name: "amount"
      }) }}
    {{ govukDateInput({
        id: "date",
        namePrefix: "date",
        fieldset: {
          legend: {
            text: "Date of Drawing"
          }
        }
      }) }}
    {{ govukButton({  text: "Add drawing"}) }}
  </form>

  {{ transactionTables(transactionRows, eventRows) }}
{% endblock %}