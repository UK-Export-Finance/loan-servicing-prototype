{% extends "index.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block pageTitle -%}
  Facility
  {{ facility.streamId }}
{%- endblock %}

{% block content %}
  <h1 class="govuk-heading-l">All Facilities
    {{ facility.streamId }}</h1>
    {{ govukButton({  text: "Create New Facility", href: "/facility/new"  }) }}
  <ul>
    {% for facility in allFacilities %}
      <li><a href="/facility/{{ facility.streamId }}">{{facility.obligor}}</a></li>
    {% endfor %}
  </ul>

{% endblock %}