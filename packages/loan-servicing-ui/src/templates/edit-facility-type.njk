{% extends "index.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/date-input/macro.njk" import govukDateInput %}

{% block pageTitle -%}
  Edit Facility Type
{%- endblock %}

{% block content %}
  <h1 class="govuk-heading-l">Edit Facility Type</h1>

  <form action="/facility-type" method="post">
    {{ govukInput({
      label: {
        text: "Facility Type Name"
      },
      classes: "govuk-input--width-20",
      id: "name",
      name: "name",
      value: facilityType.name
    }) }}

    {{ govukInput({
      label: {
        text: "Interest Calculation Method"
      },
      classes: "govuk-input--width-20",
      id: "calculateInterestStrategy",
      name: "calculateInterestStrategy",
      value: facilityType.calculateInterestStrategy
    }) }}

    {{ govukButton({  text: "Save facility type"}) }}
  </form>

{% endblock %}