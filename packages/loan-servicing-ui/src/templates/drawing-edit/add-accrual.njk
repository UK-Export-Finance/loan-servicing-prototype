{% extends "index.njk" %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/date-input/macro.njk" import govukDateInput %}
{% from "govuk/components/select/macro.njk" import govukSelect %}

{% block pageTitle -%}
  Facility
  {{ facility.streamId }}
{%- endblock %}

{% block content %}
  <h1 class="govuk-heading-l">Drawing - Add Accrual
    {{ facility.streamId }}</h1>

  <h2 class="govuk-heading-m">Add Fixed Rate Accrual</h2>
  <form action="/facility/{{drawing.facility.streamId}}/drawing/{{drawing.streamId}}/accrual/fixed?version={{drawing.streamVersion}}" method="post">
    {{ govukInput({
        label: {
          text: "Accrual Rate"
        },
        classes: "govuk-input--width-20",
        id: "accrualRate",
        name: "accrualRate"
      }) }}
    {{ govukDateInput({
        id: "effectiveDate",
        namePrefix: "effectiveDate",
        fieldset: {
          legend: {
            text: "Start Date"
          }
        }
      }) }}
    {{ govukDateInput({
        id: "expiryDate",
        namePrefix: "expiryDate",
        fieldset: {
          legend: {
            text: "Expiry Date"
          }
        }
      }) }}
    {{ govukButton({  text: "Add Fixed Fee"}) }}
  </form>

  <h2 class="govuk-heading-m">Add Market linked Accrual</h2>
  <form action="/facility/{{drawing.facility.streamId}}/drawing/{{drawing.streamId}}/accrual/market?version={{drawing.streamVersion}}" method="post">
    {{ govukInput({
        label: {
          text: "Accrual Rate"
        },
        classes: "govuk-input--width-20",
        id: "accrualRate",
        name: "accrualRate"
      }) }}
    {{ govukDateInput({
        id: "effectiveDate",
        namePrefix: "effectiveDate",
        fieldset: {
          legend: {
            text: "Start Date"
          }
        }
      }) }}
    {{ govukDateInput({
        id: "expiryDate",
        namePrefix: "expiryDate",
        fieldset: {
          legend: {
            text: "Expiry Date"
          }
        }
      }) }}
    {{ govukButton({  text: "Add Fixed Fee"}) }}
  </form>

{% endblock %}