{% from "govuk/components/table/macro.njk" import govukTable %}

{% macro transactionTables(transactionRows, eventRows) %}

    {{ govukTable({
        caption: "Facility Transactions",
        captionClasses: "govuk-table__caption--m",
        head: [
        {
            text: "Date"
        },
        {
            text: "Reference"
        },
        {
            text: "Change"
        },
        {
            text: "Principal"
        },
        {
            text: "Total Interest Accrued"
        }
        ],
        rows: transactionRows
    }) }}

    {{ govukTable({
        caption: "Event History",
        captionClasses: "govuk-table__caption--m",
        head: [
        {
            text: "Event Date"
        },
        {
            text: "Action"
        },
        {
            text: "Changes"
        },
        {
            text: "Effective Date"
        }
        ],
        rows: eventRows
    }) }}

{% endmacro %}