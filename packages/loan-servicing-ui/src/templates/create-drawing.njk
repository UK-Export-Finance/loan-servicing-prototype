{% extends "index.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/date-input/macro.njk" import govukDateInput %}
{% from "govuk/components/select/macro.njk" import govukSelect %}

{% block pageTitle -%}
  Create New Drawing
{%- endblock %}

{% block content %}
  <h1 class="govuk-heading-l">Create New Drawing</h1>

  <p class="govuk-body govuk-!-margin-bottom-6">Add a new drawing to facility {{facility.obligorId}}</p>

  <form action="/facility/{{facility.streamId}}/drawing" method="post">

    {{ govukInput({
      label: {
        text: "Interest Rate"
      },
      classes: "govuk-input--width-20",
      id: "interestRate",
      name: "interestRate"
    }) }}

    {{ govukDateInput({
        id: "issuedEffectiveDate",
        namePrefix: "issuedEffectiveDate",
        fieldset: {
          legend: {
            text: "Effective date of facility"
          }
        }
      }) }}

    {{ govukDateInput({
        id: "expiryDate",
        namePrefix: "expiryDate",
        fieldset: {
          legend: {
            text: "Expiry date of facility"
          }
        }
      }) }}

    <h3 class="govuk-heading-s">Repayment Schedule -
      {{ repaymentStrategy | enumToNameString }}</h3>

    <input name="repaymentStrategy" type="hidden" value="{{repaymentStrategy}}">

    {% if repaymentStrategy === 'Regular' %}
      {{ govukDateInput({
        id: "repaymentStartDate",
        namePrefix: "repaymentStartDate",
        fieldset: {
          legend: {
            text: "Date of first repayment"
          }
        }
      }) }}

      {{ govukInput({
        label: {
          text: "Months between repayments"
        },
        classes: "govuk-input--width-20",
        id: "repaymentInterval",
        name: "repaymentInterval",
        type: "number"
      }) }}

    {% endif %}

    {% if repaymentStrategy === 'Manual' %}
    {% for repaymentNumber in [1,2,3,4,5] %}
      <p class="govuk-body">Repayment {{repaymentNumber}}:</p>
      <div class="govuk-grid-row" style="display: flex; align-items: flex-end;">
        <div class="govuk-grid-column-one-third">
          {{ govukDateInput({
          id: "repaymentDate" + repaymentNumber,
          namePrefix: "repaymentDate" + repaymentNumber,
          fieldset: {
            legend: {
              text: "Date of repayment"
            }
          }
        }) }}
        </div>
        <div class="govuk-grid-column-one-half">
          {{ govukInput({
            label: {
              text: "Repayment Amount"
            },
            classes: "govuk-input--width-20",
            id: "repaymentAmount" + repaymentNumber,
            name: "repaymentAmount" + repaymentNumber,
            type: "number"
          }) }}
        </div>
      </div>
    {% endfor %}
    {% endif %}

    <h3 class="govuk-heading-s">Interest Strategy -
      {{ calculateInterestStrategy | enumToNameString }}</h3>

    <input name="calculateInterestStrategy" type="hidden" value="{{calculateInterestStrategy}}">

    {{ govukButton({  text: "Create Drawing"}) }}
  </form>

{% endblock %}