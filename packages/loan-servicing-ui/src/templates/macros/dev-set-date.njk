{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/input/macro.njk" import govukInput %}

{% macro setDateInput(currentDate) %}
    <form action="/dev/sendNotifications" method="post">
        {{ govukButton({  text: "Send Daily Notifications"}) }}
    </form>
    <form action="/dev/systemDate/next" method="post">
        {{ govukButton({  text: "Progress to next day"}) }}
    </form>

    <form action="/dev/systemDate">
        {{ govukInput({
            label: {
                text: "Time travel to date"
            },
            classes: "govuk-input--width-20",
            id: "newDate",
            name: "newDate",
            type: "date",
            value: currentDate
        }) }}
        {{ govukButton({  text: "Time travel" }) }}
    </form>
{% endmacro %}