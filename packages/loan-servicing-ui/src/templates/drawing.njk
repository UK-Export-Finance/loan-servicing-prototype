{% extends "index.njk" %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/date-input/macro.njk" import govukDateInput %}
{% from "govuk/components/notification-banner/macro.njk" import govukNotificationBanner %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}

{% from "macros/transaction-tables.njk" import transactionTables %}

{% block pageTitle -%}
  Facility Drawing
{%- endblock %}

{% block content %}
  {% if drawingCreated %}
    {% set html %}
    <p class="govuk-notification-banner__heading">
      Drawing created successfully
    </p>
    {% endset %}

    {{ govukNotificationBanner({
      html: html,
      type: 'success'
    }) }}
  {% endif %}
  <h1 class="govuk-heading-l">Facility
    {{ drawing.streamId }}</h1>

  {{ govukSummaryList(drawingSummaryListProps) }}

  {{ transactionTables(transactionRows, eventRows) }}

{% endblock %}