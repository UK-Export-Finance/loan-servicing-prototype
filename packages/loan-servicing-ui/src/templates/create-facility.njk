{% extends "index.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/input/macro.njk" import govukInput %}

{% block pageTitle -%}
  Create New Facility
{%- endblock %}

{% block content %}
  <h1 class="govuk-heading-l">Create New Facility</h1>

  <p class="govuk-body govuk-!-margin-bottom-6">Add a new facility to the loan servicing system</p>

  <form action="/facility" method="post">
    {{ govukInput({
      label: {
        text: "Obligor ID"
      },
      id: "obligor",
      name: "obligor"
    }) }}

    {{ govukInput({
      label: {
        text: "Facility Amount"
      },
      id: "facilityAmount",
      name: "facilityAmount"
    }) }}

    {{ govukInput({
      label: {
        text: "Interest Rate"
      },
      id: "interestRate",
      name: "interestRate"
    }) }}

    {{ govukButton({  text: "Create Facility"}) }}
  </form>

{% endblock %}