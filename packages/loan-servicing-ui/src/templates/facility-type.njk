{% extends "index.njk" %}

{% block pageTitle -%}
  Facility Type
{%- endblock %}

{% block content %}
  <h1 class="govuk-heading-l">Facility Type</h1>

  <p class="govuk-body govuk-!-margin-bottom-6">Name:
    {{facilityType.name}}</p>
  <p class="govuk-body govuk-!-margin-bottom-6">Permitted Interest Calculation Methods:</p>
  <ul>
    {% for s in facilityType.interestStrategies %}
      <li>{{s|enumToNameString}}</li>
    {% endfor %}
  </ul>
  <p class="govuk-body govuk-!-margin-bottom-6">Permitted Repayments Methods:</p>
  <ul>
    {% for s in facilityType.repaymentsStrategies %}
      <li>{{s|enumToNameString}}</li>
    {% endfor %}
  </ul>

{% endblock %}