{% from "govuk/components/table/macro.njk" import govukTable %}

{% macro transactionTable(transactionRows) %}

    {{ govukTable({
        caption: "Transactions",
        captionClasses: "govuk-table__caption--m",
        head: [
        {
            text: "Date"
        },
        {
            text: "Reference"
        },
        {
            text: "Value Updated"
        },
        {
            text: "Value Change"
        },
        {
            text: "New Value"
        }
        ],
        rows: transactionRows
    }) }}
{% endmacro %}
{% macro eventTable(eventRows) %}

    {{ govukTable({
        caption: "Event History",
        captionClasses: "govuk-table__caption--m",
        head: [
        {
            text: "Event Date"
        },
        {
            text: "Action"
        },
        {
            text: "Changes"
        },
        {
            text: "Effective Date"
        }
        ],
        rows: eventRows
    }) }}

{% endmacro %}